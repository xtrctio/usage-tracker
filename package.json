{
  "name": "@xtrctio/usage-tracker",
  "description": "Every request counts",
  "version": "0.0.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/xtrctio/usage-tracker/issues"
  },
  "dependencies": {
    "@google-cloud/firestore": "^0.19.0",
    "@xtrctio/common": "^4.1.4",
    "@xtrctio/xerror": "^1.0.1",
    "ajv": "^6.6.1",
    "ajv-errors": "^1.0.0",
    "bluebird": "^3.5.3",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "ioredis": "^4.2.0",
    "lodash": "^4.17.10",
    "luxon": "^1.8.2",
    "uuid": "^3.3.2",
    "validate.js": "^0.12.0"
  },
  "devDependencies": {
    "@xtrctio/eslint-config": "^2.0.6",
    "chai": "^4.1.2",
    "firebase-admin": "^6.3.0",
    "firebase-tools": "^6.1.1",
    "fixpack": "^2.3.1",
    "husky": "^1.2.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1"
  },
  "homepage": "https://github.com/xtrctio/usage-tracker#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run docs && LIST=`git diff-index --cached --name-only HEAD | grep '.*\\.js' | grep -v json`; if [ \"$LIST\" ]; then npm run lint && git add $LIST; fi"
    }
  },
  "keywords": [
    "api",
    "tracking",
    "usage"
  ],
  "license": "ISC",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "coverage/**",
      "tests/**",
      "scratch.js",
      "index.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtrctio/usage-tracker.git"
  },
  "scripts": {
    "docs": "jsdoc2md --template README.template --files \"lib/**/*.js\" > README.md && git add README.md",
    "internet": "mocha \"tests/**/*.internet.js\"",
    "lint": "eslint \"**/*.js\" --fix && fixpack",
    "test": "npm run unit && npm run lint",
    "test-all": "nyc mocha --use_strict \"tests/**/*.internet.js\" \"tests/**/*.unit.js\"",
    "unit": "nyc mocha --use_strict --exit \"tests/**/*.unit.js\"",
    "update-classes": "node updateClasses.js && git add lib/models/AUTOGENERATED-classMap.json"
  }
}
